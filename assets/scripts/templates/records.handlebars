{{#each records as |record|}}
  {{log record}}
  <section data-id="{{record.id}}">
    <!-- <h6>Title:</h6> -->
    <h2>
      {{limit record.title 15}}
    </h2>
    <p> ID: {{record.id}}</p>
    <p> Artist:
      {{#if record.artist}}
        {{record.artist}}
      {{else}}
        No artist provided.
      {{/if}}
    </p>
    <p> year:
      {{#if record.year}}
        {{record.year}}
      {{else}}
        No year provided.
      {{/if}}
    </p>
    <p> Genre:
      {{#if record.genre}}
        {{record.genre}}
      {{else}}
        No genre provided.
      {{/if}}
    </p>
    <!-- {{> partial}} -->

    <!-- Update record button trigger modal -->
      <button type="button" class="btn btn-success update" data-toggle="modal" data-target=".modal[data-id='{{record.id}}']">
        Update record
      </button>

  <!-- Update record modal -->
  <div class="modal fade" data-id="{{record.id}}"  tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Update record</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form data-id="{{record.id}}" class=" update-record nav-buttons">
            <input type="text" name="title" placeholder="Title" value="{{record.title}}">
            <input type="text" name="artist" placeholder="Artist" value="{{record.artist}}">
            <input type="text" name="genre" placeholder="Genre" value="{{record.genre}}">
            <input type="text" name="year" placeholder="Year" value="{{record.year}}">
            <button type="submit" class="btn btn-success update">update record</button>
          </form>
          <p class="d-flex justify-content-center update-message"></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <!-- <button type="submit" class="btn btn-secondary">Sign in</button> -->
        </div>
      </div>
    </div>
  </div>

    <!-- <button data-id="{{record.id}}" class="btn btn-success update">update record</button> -->
    <button data-id="{{record.id}}" class="btn btn-danger remove">Delete record</button>
  </section>

{{/each}}
